{
    "version": 2,
    "name": "food-truck-management",
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "uploads/$1"
        },
        {
            "src": "/css/(.*)",
            "dest": "frontend/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "frontend/js/$1"
        },
        {
            "src": "/assets/(.*)",
            "dest": "frontend/assets/$1"
        },
        {
            "src": "/",
            "dest": "frontend/index.html"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}